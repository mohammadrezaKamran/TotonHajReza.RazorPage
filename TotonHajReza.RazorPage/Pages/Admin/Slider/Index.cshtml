@page
@using TotonHajReza.RazorPage.Infrastructure
@model TotonHajReza.RazorPage.Pages.Admin.Slider.IndexModel
@{
    ViewData["Title"] = "مدیرت اسلایدرها";
    ViewData["selected"] = "slider";
}

<h3>مدیریت اسلایدر ها</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن اسلایدر</a>
<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
            <tr>
                <th>عکس</th>
                <th>عنوان</th>
                <th>لینک</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sliders)
            {
                    <tr>
                        <td>
                            <img src="@Directories.GetSliderImage(item.ImageName)" style="max-width: 250px" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Link</td>
                        <td>
                            <a asp-page="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id">ویرایش</a>

                        <form method="post" asp-page-handler="Delete" asp-route-sliderId="@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger">حذف</button>
                        </form>
                        </td>
                    </tr>

            }
            @if (Model.Sliders.Any() == false)
            {
                    <tr>
                        <td colspan="4" class="text-center">موردی برای نمایش وجود ندارد</td>
                    </tr>
            }
        </tbody>
    </table>
</div>

